<%- include('header',{pagetitle:'Hirdeteseim'}) -%>
<%- include('menu',{activepage:'hirdeteseim'}) -%>

  <div class="container align-self-center">
    <div class="row text-black-50">
        <div class="col-12">
             <table class="table table-striped table-bordered bg-light">
                 <tr>
                     <th>
                         Hirdetés
                     </th>
                     <th>
                       Típus
                     </th>
                     <th>
                         Feladó
                     </th>
                     <th>
                       Ár
                     </th>
                     <th>
                         &nbsp;
                     </th>
                     <th>
                         &nbsp;
                     </th>
                     <th>
                         &nbsp;
                    </th>

                 </tr>
                 <% hirdetesek.forEach(function(egyHirdetes){ %>
                 <tr>
                     <td>
                        <%= egyHirdetes.szoveg %>
                     </td>
                     <td>
                       <%= egyHirdetes.tipus %>
                     </td>
                     <td>
                         <%= user.name %>
                     </td>
                     <td>
                       <%= egyHirdetes.ar %>
                     </td>
                     <td>
                         <a class="btn btn-primary" href=<%= '/hirdetes/get/' + egyHirdetes._id %>>Ugrás a hirdetésre</a>
                     </td>
                     <td>
                      <a class="btn btn-warning" href=<%= '/hirdetes/edit/' + egyHirdetes._id %>>Hirdetés szerkesztése</a>
                     </td>
                     <td>
                      <a class="btn btn-danger" href=<%= '/hirdetes/del/' + egyHirdetes._id %> onclick="return confirm('Biztos, hogy törölni akarod a hirdetést?');">Hirdetés törlése</a>
                     </td>
                 </tr>
                 <% }); %>
             </table>
        </div>
    </div>
</div>

  
  <div class="container">
    <div class="row text-center">
      <div class="col-12">
        <form><a class="btn btn-lg btn-success" href="/hirdetes/new" role="button"><i class="fas fa-plus-circle"></i> Hirdetés hozzáadása</a></form>
      </div>
    </div>
  </div>

  <%- include('footer') -%>